<form action="/parties/<%= @party.id %>" method="POST">

	<label for="party_table_name">Table Name:</label>
		<input id="party_table_name" type="text" name="party[table_name]" value="<%= @party.table_name %>">
	<br>

	<label for="party_guests">Party of:</label>
		<input id="party_guests" type="number" name="party[guests]" value="<%= @party.guests %>">
